{% block content %}
<!-- CORPS DE LA PAGE -->
    <a id="article-anch" class="anch"></a>
<div class="article-loop container">

    <article class="post-type-{{post.post_type}} row" id="post-{{post.ID}}">

        <section class="article-content home row">
            <div class="offset-md-1"></div>
            <div class="title-bloc flex-title-bloc col-md-3">




                <h2 class="article-h1 flex-h1 h1-event-list">
                    <i class="fal fa-home-lg"> </i> {{post.title}}
                </h2>




                <a href="#article-anch2" class="flex-btn">
                    <div class="button button2 button3">
                        <p><i class="fas fa-chevron-down"></i></p>
                    </div>
                </a>


            </div>
            <div class="col-md-8">

                    <h2 class="article-h1">{{ post.get_field('field_5cb8c3fb40b3a') }}</h2>
                    <img src="{{ theme.link }}/assets/img/mati-bras.jpg" alt="mati-bras" id="mati-bras" class="thumb-medal flex-thumb thumb-medal2">
                    <p>{{post.content}}</p>



            </div>
            <div class="offset-md-2"></div>


        </section>
    </article>
</div>

    <a class="col-md-12" id="article-anch2"></a>
    <div class="article-loop article-loop2 video-bloc container">
        {% if post.get_field('field_5cb8c5272e364') %}
            <section class="article-content row">
                <div class="article-loop video-content col-md-5">
                    {{ post.get_field('field_5cb8c5092e363') }}
                </div>
                <div class="offset-md-1"></div>
                <div class="title-bloc col-md-6">
                    <h2 class="article-h1 h1-event-list">
                        <i class="fal fa-video"></i> Videos
                    </h2>
                    <a href="#article-anch3" class="col-md-12">
                        <div class="button button2 button3">
                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>



            </section>



        {% else %}

        <div class="col-md-4">
            {{ post.get_field('field_5cb8c6aff774f') }}
        </div>
        <div class="offset-md-2"></div>
        <div class="col-md-4">
            <img class="img" src="{{ post.get_field('field_5cb8f31ae5c37') }}" alt="alt_img">
        </div>
        <div class="offset-md-1"></div>
        {% endif %}
    </div>
    <a class="col-md-12" id="article-anch3"></a>
    <div class="article-loop article-loop2 row">
        <div class="title-bloc col-md-5">
            <h2 class="article-h1 h1-event-list a-l-affiche">
                <i class="far fa-theater-masks"></i> A L'AFFICHE
            </h2>
            <a href="#article-anch4" class="col-md-12">
                <div class="button button2 button3">
                    <p><i class="fas fa-chevron-down"></i></p>
                </div>
            </a>

        </div>

        {% for show in shows %}

            {% if show.get_field('dispo') %}

            <div class="show show4">
                <a class="row" href="{{ show.link }}">
                    <h2 class="h1-medal">
                        {{ show.title }}

                    </h2>

                    <div class="thumb-medal thumb-medal2 col-md-12">
                        <img src="{{show.thumbnail.src}}" alt="affiche" class="affiche">
                    </div>
                    <p class=" medal-text col-md-12">
                        {{ show.preview.read_more('lire la suite') }}
                    </p>
                </a>
            </div>


            {% endif %}
        {% endfor %}


    </div>

    <a id="article-anch4"></a>
    <div class="article-loop row article-loop2 container-fluid event-list">

        <h2 class="article-h1 h1-event-list col-md-5"><i class="fal fa-calendar"></i> Nous voir</h2>
        <div class="offset-md-7"></div>

        {% for show in shows %}

            {% if show.get_field('dispo') %}
                {% for event in events %}
                    {% if show.get_field('field_5cbc31c7f2c13') == event.get_field('field_5cbc31c7f2c13') %}
                        {% if "now"|date < event.get_field('field_5cb4d81344d45')  %}

                        <section class="event-home-bloc container">

                            <a class="row event-home" href="{{ event.link }}">
                                <div class="thumb thumb2 col-md-3">
                                    <img src="{{ show.thumbnail.src }}" alt="thumb">
                                </div>
                                <p class="col-md-3">{{ event.get_field('field_5cb4d81344d45') }}</p>
                                <p class="col-md-3">{{ event.get_field('field_5cb4e5ba17780') }}</p>
                                <p class="col-md-3">{{ event.get_field('field_5cb4e62317783') }} {{ event.get_field('field_5cb4e63d17784') }}</p>
                            </a>
                        </section>

                        {% endif %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>




{% endblock %}



