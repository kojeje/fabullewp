{% block content %}

    <a id="article-anch" class="anch"></a>
    <div class="content-wrapper container">
        <article class="post-type-{{post.post_type}} row" id="post-{{post.ID}}">
            <section class="article-content row">
                <h1 class="article-h1 col-md-5">{{post.title}}</h1>
                <div class="col-md-2">
                    <a href="#article-anch2">
                        <div class="button button2 button3">
                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                <div class="article-loop col-md-5">
                    {{post.content}}
                </div>

            </section>
        </article>
        <a id="article-anch2"></a>
        <aside class="row">
            {% if post.get_field('field_5cb8c5272e364') %}

                <h1 class="article-h1 col-md-4">Videos</h1>
                <a href="#article-anch3">
                    <div class="button button2 button3">
                        <p><i class="fas fa-chevron-down"></i></p>
                    </div>
                </a>
                <div class="offset-md-2"></div>
                <div class="video-content col-md-4">{{ post.get_field('field_5cb8c5092e363') }}</div>
                <div class="offset-md-1"></div>
            {% else %}
                <div class="offset-md-1"></div>
                <div class="col-md-4">
                    {{ post.get_field('field_5cb8c6aff774f') }}
                    <a href="#article-anch3">
                        <div class="button button2 button3">
                            <p><i class="fas fa-chevron-down"></i></p>
                        </div>
                    </a>
                </div>
                <div class="offset-md-2"></div>
                <div class="col-md-4">
                    <img class="img" src="{{ post.get_field('field_5cb8f31ae5c37') }}" alt="alt_img">
                </div>
                <div class="offset-md-1"></div>
            {% endif %}
        </aside>
        <a id="article-anch3"></a>
    </div><!-- /content-wrapper -->


{% endblock %}
