{% extends "base.twig" %}

{% block content %}
    <div class="content-wrapper">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <section class="article-content row">
                {% for show in shows %}
                    {% if show.category == post.category %}
                        <div class="event">
                            <h1 class="date">Le {{ post.get_field('field_5cb4d81344d45') }}</h1>
                            <div class="place">
                                <div class="h1-medal">
