{% block content %}
    <a id="article-anch"></a>
    <div class="container-fluid content-wrapper article_content show-content">

        <h2 class="article-text article-text-h2">{{ post.get_field('field_5cb19302c9a7d') }}</h2>
        <article class="row post-type-{{post.post_type}} show_teaser" id="post-{{post.ID}}">

            <section class="col-md-3 article-content">
                <div class="affiche">
                    <img src="{{post.thumbnail.src}}" alt="affiche" class="affiche">
                </div>
            </section>
            <section class="col-md-9 article-content">
                <h1 class="article-h1">{{ post.title }}</h1>
                <p class="dispo">
                    <span>
                        <i>{{ post.get_field('field_5cb1e274cb206') }}</i>
                    </span>
                    <i>depuis le</i>
                    <span>
                        <i>{{ post.get_field('field_5cb1e2facb207') }}</i>

                    </span>
                </p>

                <p class="article-text">
                    {{ post.content }}
                </p>
                <a href="#article-anch2">
                    <div class="button button2">
                        {#<p>découvrir</p>#}
                        <p><i class="fas fa-chevron-down"></i></p>
                    </div>
                </a>

            </section>

            <section class="col-md-6 article-content show-content2">
                <a id="article-anch2"></a>
